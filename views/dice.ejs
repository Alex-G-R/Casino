<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Casino Main Menu</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="dice.css">
</head>

<body>
    <div class="top-bar">
        <span id="username">
            <%= username %>
        </span>
        <span id="money">$<%= cash %></span>
    </div>
    <div class="games-container">
        <h1>More or less</h1>
        <input type="number" class="number-input" id="bet" placeholder="Place your bet:">
        <br>
        <button onclick="placeBet('less')" class="button">Less</button>
        <button onclick="placeBet('equal')" class="button">Equal</button>
        <button onclick="placeBet('more')" class="button">More</button>
        <div class="game-results">
            <p id="result"></p>
            <canvas id="diceCanvas1" width="100" height="100"></canvas>
            <canvas id="diceCanvas2" width="100" height="100"></canvas>
            <p>Sum of dice: <span id="sumOfDice">0</span></p>
        </div>
    </div>
    <button class="settings-button">Settings</button>
    <script>
        function placeBet(choice) {
            let bet = parseFloat(document.getElementById('bet').value);
            if (isNaN(bet) || bet <= 0) {
                alert("Please enter a valid bet amount.");
                return;
            }

            const randomDice1 = Math.floor(Math.random() * 6) + 1;
            const randomDice2 = Math.floor(Math.random() * 6) + 1;
            
            const total = randomDice1 + randomDice2;

            fetch('/rollDice', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ bet, choice, total })
            })
                .then(response => response.json())
                .then(data => {
                    document.getElementById('result').innerText = data.resultText;
                    document.getElementById('sumOfDice').innerText = total;
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred. Please try again.');
                });
        }
    </script>
</body>

</html>